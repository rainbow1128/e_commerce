{
    "keystore_config" : {
        "keystore": "common.auth.keystore.BaseAuthKeyStore",
        "persist_pubkey_handler": {
            "module_path": "common.auth.jwt.RemoteJWKSPersistHandler",
            "init_kwargs": {"url": "http://localhost:8007/jwks", "name":"remote_pubkey"}
        }
    },
    "apps": {
        "fileupload": {
            "valid_mime_types": {
                "application/pdf" : "fileupload.util.BaseFileAttributeSet",
                "application/ogg" : "fileupload.util.BaseFileAttributeSet",
                "video/mp4" : "fileupload.util.VideoFileAttributeSet",
                "video/3gpp": "fileupload.util.VideoFileAttributeSet",
                "audio/ogg" : "fileupload.util.BaseFileAttributeSet",
                "audio/mp4" : "fileupload.util.BaseFileAttributeSet",
                "image/jpeg"  : "fileupload.util.ImageFileAttributeSet",
                "image/png"   : "fileupload.util.ImageFileAttributeSet",
                "image/gif"   : "fileupload.util.ImageFileAttributeSet",
                "image/tiff"  : "fileupload.util.ImageFileAttributeSet",
                "image/bmp"   : "fileupload.util.ImageFileAttributeSet"
            },
            "post_process":{
                "thumbnail":  {"width":72, "height":72},
                "screenshot": {"width":120, "height":90}
            },
            "storage": {
                "base_location":"./filespace/",
                "chunk_size_bytes": 1209
            }
        }
    },
    "secrets_file_path": "./common/data/secrets.json",
    "routers": [
        "fileupload.views"
    ]
}
